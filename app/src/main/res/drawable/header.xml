<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Container low -->
    <item
        android:left="-25dp"
        android:right="-25dp"
        android:top="0dp"
        android:bottom="0dp">

        <shape android:shape="oval">

            <size
                android:width="300dp"
                android:height="100dp" />

            <solid
                android:color="#56CCF2" />
        </shape>
    </item>

    <!-- Top oval shape -->
    <item
        android:left="-25dp"
        android:right="-25dp"
        android:top="-50dp"
        android:bottom="20dp">

        <shape android:shape="oval">

            <solid
                android:color="#2D9CDB" />
        </shape>
    </item>
</layer-list>